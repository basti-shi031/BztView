<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.bzt.bztviewandroid.widget.SegmentLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/segmentlayout"
        android:layout_marginTop="16dp"
        app:normal_text_size="14sp"
        android:layout_centerHorizontal="true"/>

    <com.bzt.bztviewandroid.widget.SegmentLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/segmentlayout1"
        android:layout_marginTop="16dp"
        app:normal_text_size="18sp"
        app:select_text_size="18sp"
        app:normal_text_color="#2C86B7"
        app:select_text_color="#ffffff"
        app:normal_background="#ffffff"
        app:select_background="#2C86B7"
        android:layout_below="@id/segmentlayout"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>